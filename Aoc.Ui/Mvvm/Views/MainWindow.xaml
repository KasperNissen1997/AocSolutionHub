<Window x:Class="Aoc.Ui.Mvvm.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aoc.Ui.Mvvm.Views"
        xmlns:_2025="clr-namespace:Aoc.Ui.Mvvm.Views._2025"
        xmlns:_2024="clr-namespace:Aoc.Ui.Mvvm.Views._2024"
        xmlns:enums="clr-namespace:Aoc.Ui.Enums"
        xmlns:converters="clr-namespace:Aoc.Ui.Converters" 
        xmlns:selectors="clr-namespace:Aoc.Ui.DataTemplateSelectors"
        xmlns:viewmodels="clr-namespace:Aoc.Ui.Mvvm.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowVM}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:LandingPage x:Key="LandingPage" />

        <_2024:OverviewPage x:Key="Year2024OverviewPage" />
        <_2024:Day1View x:Key="Year2024Day1Page" />
        
        <_2025:OverviewPage x:Key="Year2025OverviewPage" />
        <_2025:Day1View x:Key="Year2025Day1Page" />
        <_2025:Day2View x:Key="Year2025Day2Page" />

        <converters:PageCodeToPageConverter x:Key="PageCodeToPageConverter"
                                            LandingPage="{StaticResource ResourceKey=LandingPage}"
                                            Year2024OverviewPage="{StaticResource ResourceKey=Year2024OverviewPage}"
                                            Year2024Day1Page="{StaticResource ResourceKey=Year2024Day1Page}"
                                            Year2025OverviewPage="{StaticResource ResourceKey=Year2025OverviewPage}"
                                            Year2025Day1Page="{StaticResource ResourceKey=Year2025Day1Page}"
                                            Year2025Day2Page="{StaticResource ResourceKey=Year2025Day2Page}" />
        <converters:PageCodeToBooleanConverter x:Key="PageCodeToBooleanConverter" />

        <selectors:ViewDataTemplateSelector x:Key="ViewDataTemplateSelector" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TreeView>
            <TreeViewItem Header="Home" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.LandingPage}}" />
            <TreeViewItem Header="2024" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.Year2024}}">
                <TreeViewItem Header="Day 1" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.Year2024Day1}}" />
            </TreeViewItem>
            <TreeViewItem Header="2025" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.Year2025}}">
                <TreeViewItem Header="Day 1" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.Year2025Day1}}" />
                <TreeViewItem Header="Day 2" IsSelected="{Binding ActivePageCode, Converter={StaticResource PageCodeToBooleanConverter}, ConverterParameter={x:Static enums:PageCode.Year2025Day2}}" />
            </TreeViewItem>
        </TreeView>

        <Frame Grid.Column="1" NavigationUIVisibility="Hidden" Content="{Binding ActivePageCode, Converter={StaticResource PageCodeToPageConverter}}" />
    </Grid>
</Window>
